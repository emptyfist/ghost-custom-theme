{
    "name": "custom-ghost-theme",
    "description": "First ghost theme is create by cli",
    "version": "0.0.1",
    "license": "MIT",
    "author": {
        "email": "beauty.daughter0310@gmail.com",
        "name": "Shinagawa haruko"
    },
    "scripts": {
        "start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
        "tailwind": "tailwindcss  -i ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify"
    },
    "screenshots": {
        "desktop": "assets/hello-world-thumb.png"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "posts_per_page": 10,
        "card_assets": true
    },
    "dependencies": {
        "autoprefixer": "^10.4.8",
        "postcss": "^8.4.16",
        "postcss-cli": "^10.0.0",
        "tailwindcss": "^3.1.8"
    }
}