{{!< default}} 

{{#post}} <article class="w-[90rem] text-white mx-auto {{post_class}}">

    {{#if feature_image}}
    <div class="flex flex-col m-auto">
        <img class=" h-[450px] p-2" srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image
            size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
            sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
        {{#if feature_image_caption}}
        <p class="text-center mt-1 text-sm">
            {{feature_image_caption}}
        </p>
        {{/if}}
    </div>
    {{/if}}

    <h1 class="text-2xl text-indigo-200 font-normal py-2 my-5" >{{title}}</h1>

    {{content}}

    <div class="mt-16">
        {{comments}}
    </div>

    </article>
{{/post}}